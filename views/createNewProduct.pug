doctype html

html
  head
    title Product Catalogue Management
  body
    h1 Product Catalogue Management - Create New Product
    p
        a(href="/") Home
    p
        form(action="/createNewProduct", method="post")
            table(width="100%" border="1" cellpadding="10" cellspacing="0")
                tbody
                    tr
                        td SKU Code:
                        td
                            input(type="text", name="sku_code", required="required")
                    tr
                        td Product Name:
                        td
                            input(type="text", name="product_name", required="required")                    
                    tr
                        td Product Description:
                        td
                            textarea(name="product_description", rows="5", cols="50") 
                    tr
                        td Brand:
                        td
                            input(type="text", name="brand", required="required")
                    tr
                        td Model:
                        td
                            input(type="text", name="model", required="required")
                    tr
                        td Category:
                        td
                            select(name="category" required="required")
                                option(value="Smartphones") Smartphones
                                option(value="Laptops") Laptops
                                option(value="Headphones") Home & Headphones
                                option(value="Smartwatches") Smartwatches
                                option(value="Televisions") Televisions
                                option(value="Cameras") Cameras
                                option(value="Gaming") Gaming
                                option(value="Kitchen") Kitchen
                                option(value="Fitness") Fitness
                                option(value="Books") Books
                    tr 
                        td Quantity on Hand
                        td 
                            input(type="number", name="quantity_on_hand", required="required")
                    tr
                        td Unit Price:
                        td
                            input(type="number", name="unit_price", step=".01", required="required")
                    tr
                        td(colspan=2, align="center")
                            input(type="submit", value="Create New Product")